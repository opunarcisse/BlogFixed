
<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "85x20" %>
  </p>
  <p>
    <%= f.label :published %>
    <%= f.check_box :published %>   
  </p>
  <p>
    <%= f.submit ||= "submit" %>
  </p>
<% end %>

