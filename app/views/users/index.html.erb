<% title "Users" %>

<table>
  <tr>
    <th>User Names</th>
    <th> Addresses</th>
    <th> E-mailes</th>
       <th> Phones</th>
     <th> Actions</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= link_to "#{user.firstname }  #{user.lastname}" , edit_user_path(user) %></td>
      <td><%=h user.address%></td>
      <td><%=h user.email %></td>
      <td> <%=h user.phone %></td>
      <td><%= link_to "details", user %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_user_path %></p>
